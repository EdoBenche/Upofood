<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_orange_500</item>
        <item name="colorPrimaryDark">@color/md_orange_500</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Button1" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button1_bg</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonLogout" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/buttonlogout_bg</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextyButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TransparentToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_theme</item>
    </style>

    <style name="FontSemiBold">
        <item name="fontPath">"fonts/Montserrat-SemiBold.ttf"</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="fontPath">"fonts/Montserrat-Medium.ttf"</item>

    </style>


    <style name="CatText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="fontPath">"fonts/Montserrat-SemiBold.ttf"</item>
    </style>

    <style name="BottomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="fontPath">"fonts/Montserrat-SemiBold.ttf"</item>
    </style>

    <style name="BottomButton.White">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="BottomButton.Primary">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="BottomButton.Accept">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/md_green_500</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="BottomButton.Disabled">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/md_grey_300</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="tabLayout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontPath">"fonts/Montserrat-Medium.ttf"</item>
    </style>

    <style name="PillShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AccountLabel">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontPath">fonts/Montserrat-SemiBold.ttf</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawableEnd">@drawable/ic_keyboard_arrow_right_black</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/bg_ractangal_stroked</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>