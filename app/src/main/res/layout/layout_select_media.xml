<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/lbl_select_media"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/font_size_normal"
            android:layout_toLeftOf="@id/ivClose" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:padding="4dp"
            android:contentDescription="@string/text_todo"
            android:src="@drawable/ic_close_black"
            android:layout_marginRight="4dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rgSelectMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">
        <RadioButton
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/fromCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:buttonTint="@color/md_orange_500"
            android:button="@drawable/ic_baseline_add_a_photo_24"
            android:padding="10dp"
            android:text="@string/fromCamera"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/font_size_medium" />
        <RadioButton
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/fromGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:buttonTint="@color/md_orange_500"
            android:button="@drawable/ic_baseline_add_photo_alternate_24"
            android:padding="10dp"
            android:text="@string/fromGallery"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/font_size_medium" />
    </RadioGroup>


</LinearLayout>
